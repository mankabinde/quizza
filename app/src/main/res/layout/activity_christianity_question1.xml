<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jesus"

    android:orientation="vertical"

    tools:context="com.example.admin.quizapp.christianity_question1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="question 1"
        android:textAllCaps="true"
        android:textSize="40dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="whats another name for the pentateuch?"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/hebrew"
        android:layout_width="150dp"
        android:onClick="movetoQ2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" the hebrew scriptures" />

    <Button
        android:id="@+id/testaments"
        android:layout_width="150dp"
        android:onClick="movetoQ2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="the new testaments" />

    <Button
        android:id="@+id/old"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="movetoQ2"
        android:text="the old testaments" />

    <Button
        android:id="@+id/torah"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="correctAnswer"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:text="the torah" />





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    </RelativeLayout>
</LinearLayout>

